<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">


    <!-- AquÃ­ insertamos los componentes -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/propinas"
        />

    <EditText
        android:id="@+id/monto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto de tu cuenta"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="25dp"
        />

    <EditText
        android:id="@+id/cantpersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad de personas en la mesa"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="25dp"
        />

    <Button
        android:id="@+id/calcula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular propina"
        android:textSize="22sp"
        android:layout_marginBottom="40dp"
        />

    <RadioGroup
        android:id="@+id/gruporad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/cinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%" />

        <RadioButton
            android:id="@+id/diez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%" />

        <RadioButton
            android:id="@+id/quince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%" />

    </RadioGroup>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="-"
        />


</LinearLayout>